{
  "name": "@neolink/database",
  "version": "0.1.0",
  "description": "Database schema and migrations for NeoLink",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "migrate": "drizzle-kit migrate",
    "generate": "drizzle-kit generate:pg",
    "studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@neolink/shared": "workspace:*",
    "drizzle-orm": "^0.29.0",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@neolink/config": "workspace:*",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0"
  }
}
