{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@neolink/shared/*": ["./packages/shared/src/*"],
      "@neolink/database/*": ["./packages/database/src/*"],
      "@neolink/ai/*": ["./packages/ai/src/*"],
      "@neolink/ui/*": ["./packages/ui/src/*"],
      "@neolink/config/*": ["./packages/config/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules", "dist", ".next"]
}
